<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="155dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="166dp">
            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:padding="10dp"
                android:id="@+id/popular_image"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:scaleType="centerInside"
                android:background="@color/white"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/bright_grey"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/popular_price"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_baseline_attach_money_24"
                        android:textColor="@color/black"
                        android:text="5.50"
                        />
                </com.google.android.material.card.MaterialCardView>


                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/popular_favorite"
                    android:layout_alignParentEnd="true"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType= "centerInside"
                    android:src="@drawable/facebook_love"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_alignParentBottom="true"
                    app:strokeColor="@color/bright_grey"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="40dp"
                    >
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/popular_rateRatio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                        <Space
                            android:layout_width="3dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/popular_numRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_baseline_star_24"
                            android:text="(25+)"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>
        </FrameLayout>
        <LinearLayout
            android:paddingHorizontal="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/popular_name"
                android:drawablePadding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="McDonald's"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginBottom="16dp"
                android:id="@+id/popular_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free delivery"
                android:textSize="12sp"
                android:drawablePadding="2dp"
                />


        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>